# Geo Database Environment Variables

# Vault Configuration
VAULT_ADDR=https://cag-vault:8200
VAULT_TOKEN=myroot
VAULT_SKIP_VERIFY=true

# Database Credentials (loaded from Vault)
POSTGRES_USER=geo_admin
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=geo_db

# Database Configuration
PGDATA=/var/lib/postgresql/data/pgdata
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAINTENANCE_WORK_MEM=256MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_DEFAULT_STATISTICS_TARGET=100
POSTGRES_RANDOM_PAGE_COST=1.1
POSTGRES_EFFECTIVE_IO_CONCURRENCY=200
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_DURATION=off
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.utf8
POSTGRES_WAL_LEVEL=replica
POSTGRES_MAX_WAL_SENDERS=3
POSTGRES_MAX_REPLICATION_SLOTS=3
